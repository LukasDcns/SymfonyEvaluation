{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Création de compte</h1>
        {{ form_start(registrationForm) }}
        <div class="row mb-2">
            <div class="form-group col-md-6">
                <label for="inputFirstName">Prénom</label>
                {{ form_widget(registrationForm.firstName, { 'attr': {'class': 'form-control', 'id': 'inputFirstName', 'placeholder': 'Prénom'} }) }}
            </div>
            <div class="form-group col-md-6">
                <label for="inputName">Nom</label>
                {{ form_widget(registrationForm.lastName, { 'attr': {'class': 'form-control', 'id': 'inputName', 'placeholder': 'Nom'} }) }}
            </div>
        </div>
        <div class="form-group mb-2">
            <label for="inputEmail">Email</label>
            {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control', 'id': 'inputEmail', 'placeholder': 'Email'} }) }}
        </div>
        <div class="form-group mb-2">
            <label for="inputPassword">Mot de passe</label>
            {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'form-control', 'id': 'inputPassword', 'placeholder': 'Mot de passe'} }) }}
        </div>
        <button type="submit" class="btn btn-primary mb-2">Créer</button>
        {{ form_end(registrationForm) }}


{% endblock %}
