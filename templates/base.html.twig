<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="author" content="Lukas Descoins // Benoit Requillart">
        <meta name="description" content="Devoir de symfony Benoit Requillart et Lukas Descoins">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('styles/styles.css') }}">
        <title>{% block title %}Welcome!{% endblock %}</title>
    </head>
    <body>
        {% if app.flashes is defined %}
            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }}" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}
        <header>
            <h1><a href="{{ path('index') }}"> PantaShop </a> </h1>
            {% if app.user %}
                    <div class="row row-cols-2">
                        <a class="btn btn-outline-secondary col-sm-4" href="{{ path('cart') }}" role="button">
                            Panier
                        </a>
                        <div class="dropdown col">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                {{ app.user.firstName }} {{ app.user.lastName }}
                            </button>
                            <ul class="dropdown-menu col" aria-labelledby="dropdownMenuButton1">
                                <li><a class="dropdown-item" href="{{ path('userDetails', {'id': app.user.id})}}">Mon compte</a></li>
                                <li><a class="dropdown-item" href="{{ path('app_logout') }}">DÃ©connexion</a></li>
                            </ul>
                        </div>
                    </div>
                {% else %}
                    <a class="btn btn-primary" href="{{ path('app_login') }}" role="button">
                        Connexion
                    </a>
                {% endif %}
        </header>
        <main>
            {% block body %}
            {% endblock %}
        </main>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
    </body>
</html>
